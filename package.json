{
  "name": "nativescript-vue-web",
  "version": "0.1.0",
  "private": true,
  "main": "lib/main.js",
  "scripts": {
    "clear": "rimraf dist",
    "lint": "eslint 'lib/**/*.{js,vue}' --fix",
    "pretest": "npm run lint",
    "test": "npm run test:unit",
    "test:unit": "mocha --timeout 1000 tests/unit/*.spec.js",
    "preversion": "npm test",
    "version": "git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {},
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.0.1",
    "eslint-plugin-vue": "^4.5.0",
    "lint-staged": "^6.0.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.0",
    "rimraf": "^2.6.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ],
    "*.vue": [
      "npm run lint",
      "git add"
    ]
  }
}
