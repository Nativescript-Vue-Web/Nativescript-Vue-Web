{
  "name": "nativescript-vue-web",
  "description": "Web components for NativeScript-Vue",
  "version": "0.8.0",
  "scripts": {
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit --require tests/unit/setup.js",
    "test:watch": "vue-cli-service test:unit --watch",
    "test:inspect": "vue-cli-service test:unit --inspect-brk --watch",
    "postversion": "git push --tags",
    "coverage": "nyc npm run test",
    "report": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov"
  },
  "main": "src/main.js",
  "dependencies": {
    "vue": "2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "3.0.5",
    "@vue/cli-plugin-eslint": "3.0.5",
    "@vue/cli-plugin-unit-mocha": "3.0.5",
    "@vue/cli-service": "3.0.5",
    "@vue/eslint-config-airbnb": "3.0.5",
    "@vue/eslint-config-prettier": "3.0.5",
    "@vue/test-utils": "1.0.0-beta.25",
    "babel-plugin-istanbul": "5.1.0",
    "chai": "4.2.0",
    "codecov": "3.1.0",
    "jsdom": "12.2.0",
    "lint-staged": "7.3.0",
    "node-sass": "4.9.4",
    "nyc": "13.1.0",
    "sass-loader": "7.1.0",
    "sinon": "7.0.0",
    "vue-template-compiler": "2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb",
      "@vue/prettier"
    ],
    "rules": {
      "import/extensions": 0,
      "global-require": 0,
      "eol-last": 0,
      "no-param-reassign": 0,
      "object-curly-newline": 0,
      "no-plusplus": 0,
      "max-len": [
        2,
        {
          "code": 160
        }
      ],
      "prefer-destructuring": [
        2,
        {
          "object": true,
          "array": false
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged && npm run test",
    "pre-push": "npm audit && npm run coverage"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 160,
    "trailingComma": "all"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nativescript-Vue-Web/Nativescript-Vue-Web.git"
  },
  "keywords": [
    "nativescript",
    "vue",
    "web",
    "components"
  ],
  "bugs": {
    "url": "https://github.com/Nativescript-Vue-Web/Nativescript-Vue-Web/issues"
  },
  "homepage": "https://github.com/Nativescript-Vue-Web/Nativescript-Vue-Web#readme",
  "nyc": {
    "check-coverage": true,
    "lines": 85,
    "statements": 85,
    "functions": 81,
    "branches": 87,
    "include": [
      "src/**/*.js",
      "src/**/*.vue"
    ],
    "instrument": false,
    "sourceMap": false,
    "all": true,
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  }
}
